<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="plone">
<body>

<metal:main fill-slot="content-core">
<metal:content-core define-macro="content-core">

  <tal:block repeat="widget view/widgets/values">
      <tal:block tal:condition="python:widget.__name__ not in ('IBasic.title', 'IBasic.description', 'title', 'description', 'ILeadImage.image', 'ILeadImage.image_caption')">
          <tal:widget tal:replace="structure widget/@@ploneform-render-widget"/>
      </tal:block>
  </tal:block>

  <fieldset tal:repeat="group view/groups"
            tal:attributes="id python:''.join((group.prefix, 'groups.', group.__name__)).replace('.', '-')">

    <div tal:define="fieldset_id python: group.__name__;
                     fieldset_level_viewability python: view.fieldset_level_viewability(fieldset_id);
                     fieldset_viewable python: fieldset_level_viewability and fieldset_level_viewability[fieldset_id] in ['r', 'rw']">

      <legend tal:content="group/label" />

      <div tal:condition="fieldset_viewable">
            <tal:block tal:repeat="widget group/widgets/values">
                <tal:widget tal:replace="structure widget/@@ploneform-render-widget"/>
            </tal:block>
      </div>
      <div tal:condition="not: fieldset_viewable">
            Fieldset is not viewable
      </div>

      <div tal:condition="python: fieldset_level_viewability == ''">
        fieldset_level_viewability is ''
      </div>

      <div tal:condition="python: fieldset_level_viewability is None or not isinstance(fieldset_viewable, dict)">
          <tal:block tal:repeat="widget group/widgets/values">
            <div  tal:define="id widget/id; is_visible python: view.is_field_viewable(id)">
              <div tal:condition="is_visible">
                <tal:widget tal:replace="structure widget/@@ploneform-render-widget"/>
              </div>
              <div tal:condition="not: is_visible">
                The widget <span tal:content="id">[widget ID]</span> is not visible
              </div>
            </div>
          </tal:block>
      </div>
      <div tal:condition="python: not (fieldset_level_viewability is None or not isinstance(fieldset_viewable, dict))">
          python: not (fieldset_level_viewability is None or not isinstance(fieldset_viewable, dict))
      </div>

    </div>
  </fieldset>

  <div tal:define="are_contents_viewable python: view.is_field_viewable('_SHOW_CONTENTS')">
    <fieldset id="folder-listing" tal:condition="are_contents_viewable">
      <legend i18n:translate="" i18n:domain="plone">Contents</legend>
      <tal:block define="view nocall:context/folder_listing; listing_macro view/macros/listing">
        <metal:use_macro use-macro="listing_macro"/>
      </tal:block>
    </fieldset>
    <fieldset id="folder-listing" tal:condition="not: are_contents_viewable">
      Viewing content listing is not allowed
    </fieldset>
  </div>

</metal:content-core>
</metal:main>

</body>
</html>
